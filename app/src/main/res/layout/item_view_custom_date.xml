<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/view_date_indicator"
    android:layout_width="60dp"
    android:layout_height="match_parent"
    android:background="@color/date_item_unselected_indicator">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="1dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_date_picker_month_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:textColor="@color/date_item_month_name"
            android:textSize="11sp"
            android:visibility="gone"
            tools:text="January" />

        <TextView
            android:id="@+id/dummy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:textColor="@android:color/transparent"
            android:textSize="11sp"
            android:visibility="gone"
            tools:text="ooo" />


        <TextView
            android:id="@+id/tv_date_picker_day"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/date_custom_item_day"
            android:textSize="14sp"
            android:textStyle="bold"
            tools:text="12" />


        <TextView
            android:id="@+id/tv_date_picker_day_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_date_picker_day"
            android:layout_centerHorizontal="true"
            android:textColor="@color/date_item_day_name"
            android:textSize="15sp"
            android:visibility="gone"
            tools:text="Monday" />


    </LinearLayout>


</RelativeLayout>